<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="moe.gimme.boombox.Principal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="100dp"
            android:layout_width="match_parent">

            <ImageButton
                app:srcCompat="@drawable/kickdrum"
                android:id="@+id/btnKick"
                android:layout_weight="0.53"
                android:onClick="playKick"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:scaleType="fitCenter" />

            <ImageButton
                app:srcCompat="@drawable/snare"
                android:id="@+id/btnSnare"
                android:onClick="playSnare"
                android:scaleType="fitCenter"
                android:layout_height="100dp"
                android:layout_width="110dp"
                android:layout_weight="0.24" />

            <ImageButton
                android:layout_width="100dp"
                app:srcCompat="@drawable/hh"
                android:id="@+id/bntHH"
                android:layout_weight="0.53"
                android:onClick="playHH"
                android:layout_height="100dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.01">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/clap"
                android:id="@+id/btnClap"
                android:layout_weight="1"
                android:onClick="playClap"
                android:scaleType="fitCenter" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/splash"
                android:id="@+id/btnSplash"
                android:layout_weight="1"
                android:onClick="playSplash"
                android:scaleType="fitCenter" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/tom"
                android:id="@+id/btnTom"
                android:layout_weight="1"
                android:onClick="playTom"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="100dp"
            android:layout_width="match_parent">

            <ImageButton
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/crash"
                android:id="@+id/btnCrash"
                android:onClick="playCrash"
                android:scaleType="fitCenter"
                android:layout_weight="0.99"
                android:layout_width="100dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ride"
                android:id="@+id/btnRide"
                android:layout_weight="1"
                android:onClick="playRide"
                android:scaleType="fitCenter" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/cow"
                android:id="@+id/btnCow"
                android:layout_weight="1"
                android:onClick="playCow"
                android:scaleType="fitCenter" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
