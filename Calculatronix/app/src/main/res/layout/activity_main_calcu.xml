<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_calcu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="moe.gimme.calculatronix.MainCalcu">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:id="@+id/numSmall" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numBig"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textAlignment="textEnd" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="70px"
                android:layout_height="100px"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:onClick="boton7"
                android:background="@drawable/zazpi" />

            <Button
                android:layout_width="70px"
                android:layout_height="100px"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:onClick="boton8"
                android:background="@drawable/zortzi" />

            <Button
                android:layout_height="100px"
                android:id="@+id/button9"
                android:layout_weight="1"
                android:onClick="boton9"
                android:background="@drawable/bederatzi"
                android:layout_width="50px" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="70px"
                android:layout_height="100px"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:onClick="boton4"
                android:background="@drawable/lau" />

            <Button
                android:layout_width="70px"
                android:layout_height="100px"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:onClick="boton5"
                android:background="@drawable/bost" />

            <Button
                android:text="6"
                android:layout_width="70px"
                android:layout_height="100px"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:onClick="boton6"
                android:background="@drawable/sei" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button1"
                android:layout_weight="1"
                android:onClick="boton1"
                android:layout_width="70px"
                android:background="@drawable/bat"
                android:layout_height="100px" />

            <Button
                android:layout_width="70px"
                android:layout_height="100px"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:onClick="boton2"
                android:background="@drawable/bi" />

            <Button
                android:layout_width="70px"
                android:layout_height="100px"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:onClick="boton3"
                android:background="@drawable/hiru" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="0"
                android:layout_width="70px"
                android:layout_height="100px"
                android:id="@+id/button0"
                android:layout_weight="1"
                android:onClick="boton0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="+"
                android:layout_width="70px"
                android:layout_height="100px"
                android:id="@+id/buttonMas"
                android:layout_weight="1"
                android:onClick="botonMas" />

            <Button
                android:text="-"
                android:layout_width="70px"
                android:layout_height="100px"
                android:id="@+id/buttonMenos"
                android:layout_weight="1"
                android:onClick="botonMenos" />

            <Button
                android:text="C"
                android:layout_width="70px"
                android:layout_height="100px"
                android:id="@+id/buttonClear"
                android:layout_weight="1"
                android:onClick="botonC" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDiv"
                android:layout_weight="1"
                android:onClick="botonDiv" />

            <Button
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMult"
                android:layout_weight="1"
                android:onClick="botonMult" />

            <Button
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonIgual"
                android:layout_weight="1"
                android:onClick="botonIgual" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
